<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_fond"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/couleur_fond" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/mes_alertes_bouton_annonces"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/onglet_blanc_select_bleu"
                android:orientation="vertical"
                android:text="@string/instant_match_chevron"
                android:textColor="@color/couleur_onglet_claire"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/mes_alertes_bouton_annonces_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/mes_alertes_bouton_formulaires"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/onglet_bleu_select_blanc"
                android:orientation="vertical"
                android:text="@string/mes_alertes_chevron"
                android:textColor="@color/couleur_onglet_blanc"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/mes_alertes_bouton_formulaires_progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dip" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <fr.RivaMedia.AnnoncesBateauGenerique.tab.NonSwipeableViewPager
            android:id="@+id/mes_alertes_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/mes_alertes_boutons_bas"
            android:background="@color/couleur_texte_blanc" />

        <RelativeLayout
            android:id="@+id/mes_alertes_boutons_bas"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_alignParentBottom="true" >

            <View
                android:id="@+id/mes_alertes_centre"
                android:layout_width="0dip"
                android:layout_height="0dip"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:id="@+id/mes_alertes_bouton_rechercher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/mes_alertes_centre"
                android:background="@drawable/fond_bleu_select_bleu"
                android:text="@string/rechercher"
                android:textColor="@color/couleur_texte_blanc" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/mes_alertes_bouton_rechercher_image"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/loupe" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mes_alertes_bouton_rechercher_image"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="@string/rechercher"
                        android:textColor="@color/couleur_texte_blanc"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mes_alertes_bouton_alertes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/mes_alertes_centre"
                android:background="@drawable/fond_bleu_select_bleu2"
                android:text="@string/rechercher"
                android:textColor="@color/couleur_texte_blanc" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/mes_alertes_bouton_alertes_image"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/clock_blanc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mes_alertes_bouton_alertes_image"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="@string/ajouter_une_alerte"
                        android:textColor="@color/couleur_texte_blanc"
                        android:textSize="10sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mes_alertes_ou"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_centerInParent="true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cercle_bleu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="2dip"
                    android:text="@string/ou"
                    android:textColor="@color/couleur_texte_blanc"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>