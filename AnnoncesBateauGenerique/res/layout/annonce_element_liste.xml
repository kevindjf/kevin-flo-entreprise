<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/couleur_cellule_impaire" >

        <RelativeLayout
            android:layout_width="120dip"
            android:layout_height="100dip"
            android:layout_alignBottom="@+id/annonce_element_liste_image"
            android:layout_alignLeft="@+id/annonce_element_liste_image"
            android:layout_alignRight="@+id/annonce_element_liste_image"
            android:layout_alignTop="@+id/annonce_element_liste_image"
            android:gravity="center" >

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/annonce_element_liste_image"
            android:layout_width="150dip"
            android:layout_height="100dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/annonce_element_liste_image"
            android:padding="10dip" >

            <TextView
                android:id="@+id/annonce_element_liste_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:lines="1"
                android:text="SKUTSHJE 15M"
                android:textColor="@color/couleur_texte_fonce"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/annonce_element_liste_sous_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/annonce_element_liste_titre"
                android:layout_below="@+id/annonce_element_liste_titre"
                android:text="69cv volvo pen Volvo Penta "
                android:textColor="@color/couleur_texte_fonce" />

            <TextView
                android:id="@+id/annonce_element_liste_taille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/annonce_element_liste_sous_titre"
                android:layout_alignRight="@+id/annonce_element_liste_sous_titre"
                android:layout_below="@+id/annonce_element_liste_sous_titre"
                android:text="12.27m"
                android:textColor="@color/couleur_texte_fonce" />

            <TextView
                android:id="@+id/annonce_element_liste_annee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/annonce_element_liste_sous_titre"
                android:layout_marginLeft="220dip"
                android:text="1990"
                android:textColor="@color/couleur_texte_fonce"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/annonce_element_liste_taille"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/annonce_element_liste_a_partir_de"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="@string/apartirde"
                    android:textColor="@color/couleur_1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/annonce_element_liste_prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="74.500"
                    android:textColor="@color/couleur_1"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/annonce_element_liste_prix_taxe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¬ TTC"
                    android:textColor="@color/couleur_1"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>