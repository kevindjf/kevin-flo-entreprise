<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanc"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_title"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sous_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:textColor="@color/gris_menu"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/group_picture"
                android:layout_width="wrap_content"
                android:layout_height="250px"
                android:layout_margin="5dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linear_principal_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/principal_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bateau_test" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_other_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/other_picture_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/other_picture_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:layout_weight="3"
                            android:src="@drawable/bateau_test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/other_picture_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:layout_weight="3"
                            android:src="@drawable/bateau_test"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/other_picture_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/other_picture_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:layout_weight="3"
                            android:src="@drawable/bateau_test"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/other_picture_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dip"
                            android:layout_weight="3"
                            android:src="@drawable/bateau_test"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/formulaire_separator"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/formulaire_separator_titre"
                    android:text="@string/principal_caracteristiques" />
            </LinearLayout>

            <TextView
                android:id="@+id/bateau_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/longueur" />

                        <TextView
                            android:id="@+id/longueur_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/largeur" />

                        <TextView
                            android:id="@+id/largeur_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/cabines" />

                        <TextView
                            android:id="@+id/cabines_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/couchettes" />

                        <TextView
                            android:id="@+id/couchettes_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/salle_de_bain" />

                        <TextView
                            android:id="@+id/salle_de_bain_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/annee" />

                        <TextView
                            android:id="@+id/annee_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/etat" />

                        <TextView
                            android:id="@+id/etat_text"
                            style="@style/annonce_cellule_texte"
                            android:text="@string/occasion" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/moteur" />

                        <TextView
                            android:id="@+id/moteur_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/puissance" />

                        <TextView
                            android:id="@+id/puissance_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/propulsion" />

                        <TextView
                            android:id="@+id/propulsion"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/formulaire_cellule" >

                        <TextView
                            style="@style/formulaire_cellule_titre"
                            android:text="@string/nombres_heures" />

                        <TextView
                            android:id="@+id/nb_heure_text"
                            style="@style/annonce_cellule_texte" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                style="@style/formulaire_separator"
                android:layout_marginTop="15dip" >

                <TextView
                    style="@style/formulaire_separator_titre"
                    android:text="@string/description" />
            </LinearLayout>

            <TextView
                android:id="@+id/description_annonce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:textColor="@color/black" />

            <LinearLayout
                style="@style/formulaire_separator"
                android:layout_marginTop="10dip" >

                <TextView
                    style="@style/formulaire_separator_titre"
                    android:text="@string/vendeur" />
            </LinearLayout>

            <TextView
                android:id="@+id/nom_vendeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/blue_title"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rue_vendeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/postale_vendeur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="150dip"
                    android:layout_height="35dip"
                    android:layout_marginRight="10dip"
                    android:background="@color/blue_title"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/telephone_principal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_tel_2"
                    android:layout_width="150dip"
                    android:layout_height="35dip"
                    android:background="@color/blue_title"
                    android:gravity="center"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/telephone_secondaire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>