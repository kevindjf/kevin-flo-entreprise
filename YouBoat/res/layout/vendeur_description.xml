<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blanc"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/vendeur_detail_description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_dots"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vendeur_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="10dip"
        android:text="@string/description_dots"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
         android:id="@+id/vendeur_detail_services_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/services_dots"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vendeur_detail_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>