<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:minHeight="80dip"
    android:background="@color/couleur_texte_claire"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/actualite_element_liste_image"
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip" />

    <TextView
        android:id="@+id/actualite_element_liste_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/actualite_element_liste_image"
        android:layout_toRightOf="@+id/actualite_element_liste_image"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/couleur_texte_noir" />

    <TextView
        android:id="@+id/actualite_element_liste_sous_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actualite_element_liste_titre"
        android:layout_toRightOf="@+id/actualite_element_liste_image"
        android:layout_marginRight="10dip"
        android:textColor="@color/couleur_texte_fonce"
        android:lines="3"
        android:textSize="11sp" />

</RelativeLayout>