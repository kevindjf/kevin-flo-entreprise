<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_fond"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE"
        android:orientation="vertical"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/alerte_formulaire_type"
            style="@style/formulaire_cellule" >

            <TextView
                style="@style/formulaire_cellule_titre"
                android:text="@string/type_star" />

            <TextView
                android:id="@+id/text"
                style="@style/formulaire_cellule_texte"
                android:hint="@string/requis" />

            <ImageView
                android:id="@+id/indicator"
                style="@style/formulaire_cellule_indicator" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alerte_formulaire_categorie"
            style="@style/formulaire_cellule" >

            <TextView
                style="@style/formulaire_cellule_titre"
                android:text="@string/categorie_star" />

            <TextView
                android:id="@id/text"
                style="@style/formulaire_cellule_texte"
                android:hint="@string/requis" />

            <ImageView style="@style/formulaire_cellule_indicator" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alerte_formulaire_prix"
            style="@style/formulaire_cellule"
            android:layout_marginTop="10dip" >

            <TextView
                style="@style/formulaire_cellule_titre"
                android:text="@string/prix" />

            <TextView
                android:id="@id/text"
                style="@style/formulaire_cellule_texte"
                android:hint="@string/facultatif" />

            <ImageView style="@style/formulaire_cellule_indicator" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alerte_formulaire_longueur"
            style="@style/formulaire_cellule" >

            <TextView
                style="@style/formulaire_cellule_titre"
                android:text="@string/longueur" />

            <TextView
                android:id="@id/text"
                style="@style/formulaire_cellule_texte"
                android:hint="@string/facultatif" />

            <ImageView style="@style/formulaire_cellule_indicator" />
        </RelativeLayout>
    </LinearLayout>

    <!--
        <Button
            android:id="@+id/alerte_formulaire_bouton_rechercher"
            style="@style/bouton_rechercher"
            android:visibility="gone" />
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dip" >

        <RelativeLayout
            android:id="@+id/alerte_formulaire_bouton_alertes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fond_bleu_select_bleu2"
            android:text="@string/rechercher"
            android:textColor="@color/couleur_texte_blanc" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/alerte_formulaire_bouton_alertes_image"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/clock_blanc" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alerte_formulaire_bouton_alertes_image"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="Ajouter Ã  mes alertes"
                    android:textColor="@color/couleur_texte_blanc"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        
    </RelativeLayout>
</RelativeLayout>