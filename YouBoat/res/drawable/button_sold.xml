            <gradient android:angle="270" android:endColor="@color/couleur_1" android:startColor="@color/couleur_1" />
        </shape></item>
    <item android:state_selected="false" android:color="@color/couleur_texte_noir"><shape>
            <gradient android:angle="270" android:endColor="@color/couleur_texte" android:startColor="@color/couleur_texte" />
        </shape></item>
    <item android:state_pressed="true" android:color="@color/couleur_fond"><shape>
            <gradient android:angle="270" android:endColor="@color/couleur_1" android:startColor="@color/couleur_1" />
        </shape></item>
    <item android:state_focused="true" android:color="@color/couleur_fond"><shape>
            <gradient android:angle="270" android:endColor="@color/couleur_1" android:startColor="@color/couleur_1" />
        </shape></item>
    <item android:state_checked="true" android:color="@color/couleur_fond"><shape>
            <gradient android:angle="270" android:endColor="@color/couleur_1" android:startColor="@color/couleur_1" />
