<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><bitmap android:src="@drawable/heart_hover" />
    </item>
    <!-- focused -->
    <item android:state_focused="true"><bitmap android:src="@drawable/heart_hover" />
    </item>
    <!-- hovered -->
    <item android:state_hovered="true"><bitmap android:src="@drawable/heart_hover" />
    </item>
    <!-- checked -->
    <item android:state_checked="true"><bitmap android:src="@drawable/heart_hover" />
    </item>
    <!-- selected -->
    <item android:state_selected="true"><bitmap android:src="@drawable/heart_hover" />
    </item>
    <!-- default -->
    <item android:drawable="@drawable/heart"/>

</selector>