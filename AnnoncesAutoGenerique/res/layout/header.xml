<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/cuir" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/header_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/accueil"
            android:textSize="20sp"
            android:textColor="@color/couleur_texte_blanc"
             />

        <RelativeLayout
            android:id="@+id/header_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/fond_noir_select_gris" >

            <View
                android:id="@+id/header_menu"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@drawable/menu" />
        </RelativeLayout>

        <Button
            android:id="@+id/header_effacer"
            android:layout_width="60dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/bouton_effacer_select"
            android:text="@string/effacer"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/header_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="86dp"
            android:visibility="gone" />

        <View
            android:id="@+id/header_favoris"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/favoris_select"
            android:visibility="gone" />

        <View
            android:id="@+id/header_tri"
            android:layout_width="30dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:background="@drawable/trier"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>