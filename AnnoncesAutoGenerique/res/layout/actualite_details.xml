<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/couleur_fond"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/actualite_detail_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/actualite_detail_titre_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/couleur_1"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <ImageView
                        android:id="@+id/actualite_detail_image"
                        android:layout_width="fill_parent"
                        android:layout_height="200dip" />

                    <TextView
                        android:id="@+id/actualite_detail_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:gravity="center_horizontal"
                        android:textColor="@color/couleur_texte_claire"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/actualite_detail_titre"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:textColor="@color/couleur_texte_blanc"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/couleur_fond"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/actualite_detail_texte"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="5dip"
                        android:textAlignment="center"
                        android:textColor="@color/couleur_texte_noir" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>