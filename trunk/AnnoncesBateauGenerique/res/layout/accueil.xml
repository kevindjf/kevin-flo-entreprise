<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fond"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dip"
        android:paddingBottom="15dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo_entreprise"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dip"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/image_entreprise_pager"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:background="@android:color/transparent" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/image_entreprise_pager_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@+id/image_entreprise_pager"
                    android:background="@android:color/transparent"
                    android:padding="3dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_entreprise"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dip"
                android:padding="5dip"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/layout_entreprise_consulter_offres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:orientation="vertical"
                android:padding="5dip"
                android:paddingLeft="15dip" >

                <TextView
                    android:id="@+id/text_entreprise_consulter_offres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/consulter_les_offres_de"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_entreprise_offres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/layout_entreprise_derniere_actualite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical"
                android:padding="5dip"
                android:paddingLeft="15dip" >

                <TextView
                    android:id="@+id/text_entreprise_derniere_actualite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/consulter_les_offres_de"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_entreprise_derniere_actualite_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>