<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@color/couleur_texte_claire"
    android:minHeight="80dip"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@android:id/progress"
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/actualite_element_liste_image"
        android:layout_width="100dip"
        android:layout_height="70dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip" />

    <TextView
        android:id="@+id/actualite_element_liste_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/actualite_element_liste_image"
        android:layout_toRightOf="@+id/actualite_element_liste_image"
        android:textColor="@drawable/text_color_button"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/actualite_element_liste_sous_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actualite_element_liste_titre"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/actualite_element_liste_image"
        android:lines="3"
        android:textColor="@drawable/text_color_button"
        android:textSize="11sp" />

</RelativeLayout>