<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <color android:color="@color/blue"/>
    </item>
    <!-- focused -->
    <item android:state_focused="true"> <bitmap android:src="@drawable/target_hover"/>
    </item>
    <!-- hovered -->
    <item android:state_hovered="true"> <bitmap android:src="@drawable/target_hover"/>
    </item>
    <!-- checked -->
    <item android:state_checked="true"> <bitmap android:src="@drawable/target_hover"/>
    </item>
    <!-- default -->
    <item android:drawable="@drawable/target"/>

</selector>