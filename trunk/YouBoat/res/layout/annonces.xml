<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_1" >
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fond_home"
        android:scaleType="center"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU"
            android:textColor="@color/_blanc"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOAT"
            android:textColor="@color/_noir"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".fr"
            android:textColor="@color/_blanc"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/annonces_aujourd_hui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="120dip"
        android:gravity="center"
        android:text="Aujoud&apos;hui 15.508 annonces"
        android:textColor="@color/_blanc"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_bloc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/annonces_aujourd_hui"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/annonces_bouton_bateaux_et_voiliers"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:background="@drawable/shape_blue_selector"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="4dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/icone_bateau_ssfond" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:fontFamily="@drawable/bebasneue"
                        android:text="@string/bateaux_et_voiliers"
                        android:textColor="@color/_blanc"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="4dip"
                        android:fontFamily="@drawable/bebasneue"
                        android:text="@string/test_annonce_ventes"
                        android:textColor="@color/couleur_fond"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/annonces_bouton_moteurs"
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_blue_selector"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="4dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/icone_moteur_ssfond" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="5dip"
                        android:fontFamily="@drawable/bebasneue"
                        android:text="@string/moteurs_hb_lb"
                        android:textColor="@color/_blanc"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="4dip"
                        android:fontFamily="@drawable/bebasneue"
                        android:text="@string/test_annonce_ventes"
                        android:textColor="@color/_blanc"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/annonces_bouton_accessoires_et_divers"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_below="@+id/linear_bloc"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shape_blue_selector"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/icone_accessoire_ssfond" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    android:fontFamily="@drawable/bebasneue"
                    android:text="@string/accessoires_et_divers"
                    android:textColor="@color/_blanc"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="4dip"
                    android:fontFamily="@drawable/bebasneue"
                    android:text="@string/test_annonce_ventes"
                    android:textColor="@color/_blanc"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>