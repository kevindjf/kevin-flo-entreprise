<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@color/couleur_cellule_paire"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/vendeur_element_liste_image"
        android:layout_width="90dip"
        android:layout_height="80dip"
        android:layout_marginRight="10dip" />

    <TextView
        android:id="@+id/vendeur_element_liste_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/vendeur_element_liste_image"
        android:layout_toRightOf="@+id/vendeur_element_liste_image"
        android:text="SKUTSHJE 15M"
        android:layout_marginTop="10dip"
        android:textSize="15sp"
        android:textStyle="bold"
        android:lines="1"
        android:textColor="@color/couleur_texte_noir" />

    <TextView
        android:id="@+id/vendeur_element_liste_sous_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/vendeur_element_liste_titre"
        android:layout_below="@+id/vendeur_element_liste_titre"
        android:layout_toRightOf="@+id/vendeur_element_liste_image"
        android:textColor="@color/couleur_texte_fonce"
        android:layout_marginTop="10dip"
        android:text="69cv volvo pen Volvo Penta " />

</RelativeLayout>