<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_retour_effacer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:text="@string/boat_on_demand"
            android:textColor="@color/blue"
            android:textStyle="bold" 
            android:textSize="18sp"
            />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:text="@string/description_boat_on_demand"
                android:textColor="@android:color/black" 
                android:textAlignment="center"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generalites"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/type_star"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_categorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/categorie_star"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_categorie_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categorie"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_chantier_modele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/chantier_modele"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_chantiere_modele_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chantier_modele"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_etat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/etat"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_etat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etat"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caracteristiques"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_taille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/taille"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_taille_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taille"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_lieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/lieu"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_lieu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lieu"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/budget_star"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_budget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budget"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boat_on_demand_commentaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_blanc_fleche_bleu"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="140dip"
                android:layout_height="wrap_content"
                android:text="@string/commentaire"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/boat_on_demand_commentaire_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/commentaire"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reprise_de_votre_bateau"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.8dp"
            android:background="#EEE"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrivez_le_bateau_que_vous_possedez"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="#006ab3"
            android:text="@string/rechercher"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>